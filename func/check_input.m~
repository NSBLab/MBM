            if isfield(aa,'maps')==0 | isfield(aa.maps,'bm.maps.anatList')==0
                uialert(app.UIFigure,'No input maps','err','CloseFcn','RunButtonPushed');
                error('No input maps');
            end
            
            if exist('app.mbm.maps.maskFile')==0
                %                 errordlg('No mask');
                uialert(app.UIFigure,'No mask','err','CloseFcn','RunButtonPushed');
                
                %                 pause
            end
            
            if exist('app.mbm.stat.indicatorMatrix')==0
                %                 errordlg('No indicatorMatrix');
                uialert(app.UIFigure,'No indicatorMatrix','err','CloseFcn','RunButtonPushed');
                
                %                 pause
            end
            
            if exist('app.mbm.mbm.eigFile')==0
                %                 errordlg('No eigenmodes');
                uialert(app.UIFigure,'No eigenmodes','err','CloseFcn','RunButtonPushed');
                %                 pause
            end
            
            if exist('app.mbm.plot.vtk')==0
                %                 errordlg('No surface');
                uialert(app.UIFigure,'No surface','err','CloseFcn','RunButtonPushed');
            end
     