            if isfield(aa,'maps')==0 | isfield(aa.maps,'bm.maps.anat_list')==0
                uialert(app.UIFigure,'No input maps','err','CloseFcn','RunButtonPushed');
                error('No input maps');
            end
            
            if exist('app.mbm.maps.mask_file')==0
                %                 errordlg('No mask');
                uialert(app.UIFigure,'No mask','err','CloseFcn','RunButtonPushed');
                
                %                 pause
            end
            
            if exist('app.mbm.stat.G')==0
                %                 errordlg('No G');
                uialert(app.UIFigure,'No G','err','CloseFcn','RunButtonPushed');
                
                %                 pause
            end
            
            if exist('app.mbm.mbm.eig_file')==0
                %                 errordlg('No eigenmodes');
                uialert(app.UIFigure,'No eigenmodes','err','CloseFcn','RunButtonPushed');
                %                 pause
            end
            
            if exist('app.mbm.plot.vtk')==0
                %                 errordlg('No surface');
                uialert(app.UIFigure,'No surface','err','CloseFcn','RunButtonPushed');
